.page {
    min-height: 100%;
    background: #f6f6f6;
}

.page .all {
    height: 100%;
}

.lessons {
    width: 90%;
    height: 250rpx;
    padding: 5px;
    margin: 20rpx auto;
    background-size: cover;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}

.lessons image {
    width: 100%;
    height: 250rpx;
    border-radius: 10rpx;
}

.lessons .title {
    width: 97%;
    height: 100rpx;
    position: absolute;
    bottom: 0;
    background-image: url('https://api.jules.xin/images/1ihv9.png');
    background-size: 100% 100%;
    border-radius: 0rpx 0rpx 10rpx 10rpx;
    color: #fff;
    text-align: left;
}

.lessons .title .tst {
    display: block;
    padding-left: 20rpx;
}

.lessons .title .lessonTitle {
    font-size: 1rem;
    height: 60rpx;
    line-height: 60rpx;
    font-family: "黑体";
}

.lessons .title .lessonCourses {
    font-size: 23rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.thistrue {
    -webkit-filter: grayscale(50%);
    -moz-filter: grayscale(50%);
    -ms-filter: grayscale(50%);
    -o-filter: grayscale(50%);
}
button::after{
    border:none;
}