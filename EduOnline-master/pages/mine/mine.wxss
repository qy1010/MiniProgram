/* pages/mine/mine.wxss */

.page {
    width: 100%;
    height: 100%;
    background-color: #f6f6f6;
    margin: 0;
    padding: 0;
}

.userInfo {
    width: 100%;
    height: 400rpx;
    text-align: center;
}

.userInfo .header-bg {
    width: 100%;
    height: 180rpx;
    background-image: url('https://api.jules.xin/images/3h6Mj.png');
    background-size: 100% 100%;
}

.userInfo .avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}

.userInfo .infomation {
    width: 100%;
    height: 70rpx;
    margin-top: -80rpx;
}

.userInfo .infomation .userText {
    font-size: 26rpx;
}

.userInfo .userInfo_icon {
    top: 50%;
    position: relative;
    right: 10rpx;
}

.setting {
    margin-top: 50rpx;
    height: auto;
}

.userList {
    margin: 5rpx 0;
}

.title:nth-of-type(n) {
    height: 70rpx;
    padding-left: 50rpx;
    font-size: 30rpx;
    line-height: 70rpx;
    box-shadow: 0px 3px 3px #ddd;
}

.title:nth-of-type(2n+1) {
    background: #fff;
    color: #595959;
}

.title:nth-of-type(2n) {
    height: 70rpx;
    padding-left: 50rpx;
    font-size: 30rpx;
    line-height: 70rpx;
    color: #595959;
    box-shadow: 0px 3px 3px #ddd;
}

.cont {
    width: 65%;
    float: left;
}

.name {
    width: 30%;
    float: left;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 700rpx;
    /* overflow: hidden; */
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #fff;
    margin: -300rpx 25rpx;
    border-radius: 10rpx;
}

.modal-title {
    margin-top: -50rpx;
    font-size: 50rpx;
    color: #1f88e4;
    text-align: center;
}

.modal-content {
    padding: 50rpx 32rpx;
    text-align: center;
}

.modal-header {
    width: 100%;
    height: 100rpx;
    position: relative;
}

.btn-cancel {
    color: #fff;
    position: absolute;
    right: 0;
    width: 0;
    height: 0;
    border-top: 100rpx solid #1d89e4;
    border-left: 100rpx solid transparent;
}

.btn-cancel image {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    top: -90rpx;
    right: 8rpx;
}

.modal-footer {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
}

.modal-footer .cancel {
    height: 100rpx;
    flex: 1;
    text-align: center;
    border-radius: 0 0 0 10px;
}

.modal-footer .confirm {
    flex: 1;
    text-align: center;
    background: red;
    color: #fff;
    border-radius: 0 0 10rpx 0;
}

.logout {
    width: 100%;
    text-align: center;
    position: absolute;
    bottom: 50rpx;
}

.logoutBtn {
    width: 120px;
    height: 42px;
}

.right_line {
    top: 40rpx;
    right: 20rpx;
}
