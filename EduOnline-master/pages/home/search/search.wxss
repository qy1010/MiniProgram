/*搜索框  */
.searchBox{
    position: absolute;
    width: 100%;
    height: 100rpx;
    background: transparent;
    top: 0;
    border: 0;
}

.searchBox .seachText{
    width: 90%;
    height: 60rpx;
    z-index: 1111111;
    background: #fff;
    margin: 20rpx auto;
    border-radius: 50rpx;
    line-height: 60rpx;
    box-shadow: 0px 3px 3px #eee;
}

.searchBox .seachText input{
    width: 60%;
    height: 60rpx;
    font-size: 25rpx;
    padding-left: 30rpx;
    line-height: 60rpx;
}

.searchBox .searchBtn{
    width: 100rpx;
    height: 60rpx;
}

.searchBox .searchBtn image{
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    right: 60rpx;
    top: 30rpx;
}

.show{
    display: block
}
.hide{
    display: none
}