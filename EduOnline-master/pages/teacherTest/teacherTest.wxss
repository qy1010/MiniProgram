/* pages/teacherTest/teacherTest.wxss */

.questions {
    width: 100%;
    height: 600rpx;
    margin: 30rpx 0;
    font-size: 26rpx;
    display: flex;
    flex-direction: column;
}

.title {
    width: 100%;
    height: 110rpx;
    background: #1e88e5;
    color: white;
    line-height: 110rpx;
    font-size: 28rpx;
}

.content {
    width: 100%;
    margin: 30rpx 0;
    background: #fff;
    font-size: 30rpx;
    box-shadow: 0px 3px 3px #b9bdc0;
}

.content view {
    width: 90%;
    margin: 0 auto;
    padding: 10rpx 30rpx;
    border-bottom: 1px dashed #dedede;
}

.content view:checked {
    background: black;
}

.essays {
    text-indent: 20rpx;
}

.completed {
    width: 100%;
    height: 80rpx;
    text-align: center;
}

.completed image {
    width: 140rpx;
    height: 56rpx;
}

.radio {
    display: block;
    margin: 20rpx;
    font-size: 28rpx;
    border-bottom: 1px dashed #dedede;
    border-bottom-width: 80%;
}

.next {
    text-align: center;
}

.next image {
    width: 100rpx;
    height: 80rpx;
}

.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.5);
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 90%;
    height: 900rpx;
    position: fixed;
    top: 100rpx;
    left: 5%;
    z-index: 1111111111111111;
    background-image: url('https://api.jules.xin/images/0zFQx.jpg');
    background-size: 100% 100%;
    overflow: hidden;
}

.ok {
    width: 260rpx;
    height: 70rpx;
    position: absolute;
    bottom: 50rpx;
    left: 30rpx;
}

.modal-Test-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-Test-dialog {
    width: 80%;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 10%;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 0;
    border-radius: 36rpx;
}

.modal-Test-title {
    padding: 30rpx 0;
    font-size: 46rpx;
    font-weight: 800;
    color: #1d89e4;
    text-align: center;
    border-bottom: 1px solid #e5e5e5;
}

.modal-Test-content {
    padding: 50rpx 32rpx;
    font-size: 32rpx;
}

.modal-Test-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}

.Test-btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.Test-btn-confirm {
    width: 50%;
    color: #fff;
    text-align: center;
    background: red;
}
